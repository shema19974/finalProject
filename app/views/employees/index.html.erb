<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.birth_date %></td>
        <td><%= employee.admin %></td>
        <td><%= employee.department.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

