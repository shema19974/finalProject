<div class="container">
  <h3>Departments</h3>
  <%= link_to 'New Department', new_department_path, class:"btn btn-success", style:"margin-bottom: 15px" %>
  <table class="table table-striped table-hover", style:"width: 35rem;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Short name</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <td><%= department.short_name %></td>
          <td><%= link_to 'Show', department %></td>
          <td><%= link_to 'Edit', edit_department_path(department) %></td>
          <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>