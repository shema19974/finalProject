<div>
  <p id="notice"><%= notice %></p>

  <h1>Leaves</h1>

  <%= link_to 'New Leafe', new_leafe_path, class:"btn btn-success btn", style:"margin-bottom: 10px" %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Leave type</th>
        <th>Description</th>
        <th>Status</th>
        <th>Employee</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @leaves.each do |leafe| %>
        <tr>
          <%if current_employee.id == leafe.employee_id%>
          <td><%= leafe.leave_type %></td>
          <td><%= leafe.description %></td>
          <td><%= leafe.status %></td>
          <td><%= leafe.employee.first_name %></td>
          <% if leafe.status == "Approved" %>
          <td><%= leafe.updated_at %></td>
          <% end %>
          <td><%= link_to 'Show', leafe, class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_leafe_path(leafe), class:"btn btn-warning" %></td>
          <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>
  <br>
</div>